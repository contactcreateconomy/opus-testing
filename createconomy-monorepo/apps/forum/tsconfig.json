{
  "extends": "../../packages/config/typescript/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@repo/ui": [
        "../../packages/ui/src"
      ],
      "@repo/ui/*": [
        "../../packages/ui/src/*"
      ],
      "@repo/auth": [
        "../../packages/auth/src"
      ],
      "@repo/auth/*": [
        "../../packages/auth/src/*"
      ],
      "@repo/convex": [
        "../../packages/convex/src"
      ],
      "@repo/convex/*": [
        "../../packages/convex/src/*"
      ],
      "@repo/types": [
        "../../packages/types/src"
      ],
      "@repo/types/*": [
        "../../packages/types/src/*"
      ]
    },
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
